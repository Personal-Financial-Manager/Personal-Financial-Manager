<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.budget.BudgetListFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/current_month_budget"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@+id/viewMarginBelowButtons"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_home_background" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvBudgingPlanLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/current_month_budget"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvBudgetingPlanAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="2500000"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvBudgingPlanLabel" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBudgetPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:drawableTop="@drawable/ic_budget"
                android:paddingVertical="16dp"
                android:text="@string/budgeting"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                app:backgroundTint="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/btnAddIncome"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvBudgetingPlanAmount" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_dollar"
                android:paddingVertical="16dp"
                android:text="@string/new_income"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                app:backgroundTint="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/btnAddExpenses"
                app:layout_constraintStart_toEndOf="@+id/btnBudgetPage"
                app:layout_constraintTop_toTopOf="@+id/btnBudgetPage" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddExpenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:drawableTop="@drawable/ic_plus"
                android:paddingVertical="16dp"
                android:text="@string/new_expenses"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                app:backgroundTint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnAddIncome"
                app:layout_constraintTop_toTopOf="@+id/btnBudgetPage" />

            <View
                android:id="@+id/viewMarginBelowButtons"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                app:layout_constraintTop_toBottomOf="@id/btnBudgetPage" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvExpensesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/viewMarginBelowButtons" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>